<?php

use Mmd\Game\Form\GameEditForm;

$title = $this->translate(sprintf('Редактировать игру %s', $this->game->getName()));
$this->headTitle($title);

/** @var GameEditForm $form */
$form = $this->form;
$form->setAttribute('action', $this->url('admin/game', ['action' => 'update', 'id' => $this->game->getId()]));
$form->prepare();

?>

<div class="col-md-4 col-md-offset-4">
    <?php if (!empty($this->success)) : ?>
        <div class="alert alert-success"><?php echo $this->success; ?></div>
    <?php endif; ?>
    <?php echo $this->adminGameEditForm($form); ?>
</div>